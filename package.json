{
  "name": "kafka-publisher",
  "version": "1.0.1",
  "description": "kafka message publisher, fallback appending messages to a file while kafka unavailable",
  "main": "index.js",
  "keywords": [
    "kafka",
    "publisher",
    "fallback"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "watchInteg": "NODE_ENV=DEBUG ava --fail-fast -v **/__integ-tests__/**/*test*.js --watch",
    "watchUnit": "NODE_ENV=DEBUG ava --fail-fast -v **/__tests__/**/*test*.js --watch",
    "coverage": "nyc ava",
    "coverageDetail": "nyc --reporter=html --reporter=text ava",
    "ava": "ava",
    "test": "npm run ava",
    "start": "nodemon logging.js",
    "kafkaParitionerInteg": "ava --serial --fail-fast -v __integ-tests__/kafka-publisher-integ-tests.js",
    "lint": "eslint . --ext=js --ignore-pattern '**/__tests__' --ignore-pattern '**/__integ-tests__' --ignore-pattern '**/public/api-docs' --ignore-path .gitignore --fix",
    "watchLint": "esw . --ext=js --ignore-pattern '**/__tests__' --ignore-pattern '**/__integ-tests__' --ignore-pattern '**/public/api-docs' --ignore-path .gitignore --fix --watch"
  },
  "esm": {
    "force": true,
    "mode": "auto"
  },
  "author": "Troy Collinsworth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:tcollinsworth/kafka-publisher.git"
  },
  "devDependencies": {
    "async-wait-until": "^1.2.4",
    "ava": "^3.11.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-watch": "^7.0.0",
    "ignore-styles": "^5.0.1",
    "nyc": "^15.1.0",
    "sinon": "^2.3.5"
  },
  "dependencies": {
    "delay": "^4.1.0",
    "esm": "^3.0.84",
    "json-stringify-safe": "^5.0.1",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "moment": "^2.24.0",
    "murmur2-partitioner": "^1.0.0",
    "node-rdkafka": "^2.5.1",
    "pino": "^5.11.1",
    "pino-pretty": "^2.4.2",
    "promise-retry": "^1.1.1",
    "promise-timeout": "^1.3.0",
    "stdout-stream": "^1.4.0",
    "uuid": "^3.3.2"
  },
  "ava": {
    "files": [
      "**/__tests__/**/*test*.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "ignore-styles",
      "esm"
    ]
  }
}
